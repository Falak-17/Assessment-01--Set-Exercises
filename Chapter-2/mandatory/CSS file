nav { 
    background-color: black;                                             /* Sets background color to black */
    padding: 15px;                                                       /* Adds padding inside the navigation bar */
    text-align: center;                                                  /* Centers the text */
    font-size: 20px;                                                     /* Sets the font size */
    font-family: 'Times New Roman', Times, serif;                        /* Specifies the font */
    }

body { 
    color: whitesmoke;                                                    /* Sets text color to a light grayish white */
    background-color: black;                                              /* Sets background color to black */
    margin: 0;                                                            /* Removes default margin */
    font-family: Arial, sans-serif;                                       /* Specifies a readable sans-serif font */
    }

h1 { 
    color: red;                                                           /* Sets text color to red */
    font-size: 32px;                                                      /* Sets font size */
    font-family: 'Times New Roman', Times, serif;                         /* Specifies the font */
    text-align: center;                                                   /* Centers the text */
    text-decoration: wavy;                                                /* Applies a wavy text decoration (Note: not fully supported in all browsers) */
   }

h2 { 
    color: yellow;                                                        /* Sets text color to yellow */
    font-size: 20px;                                                      /* Sets font size */
    font-family: 'Times New Roman', Times, serif;                         /* Specifies the font */
   }

footer { 
    background-color: black;                                              /* Sets footer background to black */
    color: whitesmoke;                                                    /* Sets text color to white */
    text-align: center;                                                   /* Centers the text */
    padding: 10px;                                                        /* Adds padding inside the footer */
    font-family: Arial, Helvetica, sans-serif;                            /* Specifies the font */
      }

.box { 
    border: 5px solid red;                                                /* Creates a red border with a thickness of 5px */
    padding: 20px;                                                        /* Adds padding inside the box */
    width: 96%;                                                           /* Makes the box responsive, taking up 96% of available width */
    max-width: 1700px;                                                    /* Ensures the box does not exceed 1700px in width */
    background-repeat: no-repeat;                                         /* Prevents the image from repeating */
    background-size: cover;                                               /* Ensures the image covers the entire box */
    background-position: center;                                          /* Centers the background image */
    border-radius: 25px;                                                  /* Rounds the corners of the box */
    box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.1);                          /* Adds a subtle shadow for depth */
    color: white;                                                         /* Sets text color to white */
    font-size: 16px;                                                      /* Sets font size */
    }
