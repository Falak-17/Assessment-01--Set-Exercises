* { margin: 0;
    padding: 0;
    box-sizing: border-box;                                /* Ensures padding and border are included in element's width/height */
  }

body { font-family: Arial, sans-serif;                     /* Sets the font style */
       line-height: 1.6;                                   /* Improves readability */
       background-color: rgba(66,170,102,0.888);           /* Light gray background */
       color: #0a0c3c;                                     /* Dark gray text */
     }

header { background-color: rgba(3,30,12,0.888);            /* Dark background */
         color: white;                                     /* White text color */
         text-align: center;                               /* Centers text inside header */
         padding: 20px 0;                                  /* Adds vertical padding */
       }

header h1 { font-size: 2.5em;                              /* Increases font size for title */
          }

nav { background-color: #188b38d8;                         /* Slightly lighter dark background */
    }

nav ul { display: flex;                                    /* Uses flexbox to align items horizontally */
         justify-content: center;                          /* Centers navigation items */
         list-style: none;                                 /* Removes default list styling */
         padding: 10px 0;                                  /* Adds vertical padding */
       }

nav ul li { margin: 0 20px;                                /* Spacing between menu items */
          }

nav ul li a { color: white;                                /* White text color for links */
              text-decoration: none;                       /* Removes underline */
              font-size: 1.2em;                            /* Increases font size */
            }

main { padding: 20px;                                      /* Adds padding to main content */
     }

.content-wrapper { display: flex;                          /* Uses flexbox to align content in columns */
                   justify-content: space-between;         /* Distributes space between columns */
                 }

.left-column { flex: 1;                                    /* Takes up equal space */
               padding: 20px;                              /* Adds spacing inside */
               background-color: rgba(223,214,179);        /* White background */
               margin-right: 20px;                         /* Adds spacing between columns */
             }

.left-column h2 { font-size: 2em;                          /* Increases heading size */
                  margin-bottom: 10px;                     /* Adds spacing below heading */
                }

.left-column ul { list-style: none;                        /* Removes default list bullets */
                }

.left-column ul li { margin: 10px 0;                       /* Adds spacing between list items */
                   }

.right-column { flex: 1;                                   /* Takes up equal space */
                padding: 20px;                             /* Adds spacing inside */
                background-color: rgba(223,214,179);       /* White background */
              }

.right-column h2 { font-size: 2em;                         /* Increases heading size */
                   margin-bottom: 10px;                    /* Adds spacing below heading */
                 }

.progress p { margin: 10px 0;                              /* Adds spacing between items */
            }
 
button { background-color: #333;                           /* Dark background */
         color: white;                                     /* White text */
         border: none;                                     /* Removes default border */
         padding: 10px 20px;                               /* Adds padding for better clickability */
         cursor: pointer;                                  /* Changes cursor to pointer when hovered */
         font-size: 1.2em;                                 /* Increases button text size */
       }

button:hover { background-color: #555;                     /* Slightly lighter background on hover */
             }

footer { background-color: rgba(3,30,12,0.888);            /* Dark background */
         color: white;                                     /* White text */
         text-align: center;                               /* Centers text */
         padding: 10px 0;                                  /* Adds padding */
         position: fixed;                                  /* Keeps footer at the bottom */
         width: 100%;                                      /* Makes footer span the full width */
         bottom: 0;                                        /* Positions footer at the bottom */
       }
