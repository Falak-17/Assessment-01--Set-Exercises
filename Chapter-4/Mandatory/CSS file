* { margin: 0;
    padding: 0;
    box-sizing: border-box;                     /* Ensures padding and border are included in width and height */
  }

body { font-family: Arial, sans-serif;          /* Sets font for the body */
       background-color: white;                 /* Sets background color of the page */
       color: #000;                             /* Sets text color */
       overflow-x: hidden;                      /* Prevents horizontal scroll */
     }

header { background-color: #17072b;             /* Dark background for the header */
         color: white;                          /* White text */
         text-align: center;                    /* Center-aligns text */
         padding: 20px 0;                       /* Adds padding to top and bottom */
         font-family: Tahoma, sans-serif;       /* Font for header text */
         font-weight: 700;                      /* Bold text */
       }

h1 { font-size: 44px;                           /* Large font size */
     margin-bottom: 10px;                       /* Adds space below the header */
     text-decoration: underline;                /* Underlines the h1 text */
   }

.nav { list-style: none;                        /* Removes default list bullets */
       display: flex;                           /* Flexbox for horizontal layout */
       justify-content: center;                 /* Centers the menu items */
       gap: 40px;                               /* Adds space between menu items */
       font-size: 20px;                         /* Sets font size */
       padding: 15px 0;                         /* Adds padding on top and bottom */
     }

.nav li a { text-decoration: none;              /* Removes underline from links */
            color: white;                       /* Sets text color for links */
            font-weight: 400;                   /* Normal font weight for links */
          }

.container { display: flex;                     /* Flexbox for layout */
             width: 100%;                       /* Full width of the container */
             min-height: auto;                  /* Minimum height automatically adjusted */
           }

main { flex: 2;                                 /* Main content takes up 2/3 of space */
       padding: 40px;                           /* Adds padding around content */
     }

main h2 { font-size: 31px;                      /* Sets font size */
          color: #050533;                       /* Sets text color */
          margin-bottom: 15px;                  /* Adds space below the heading */
          font-family: Tahoma, sans-serif;      /* Font for main heading */
          font-weight: 700;                     /* Bold text */
        }

main p { font-size: 18px;                       /* Sets font size */
         color: #050533;                        /* Text color */
         margin-bottom: 20px;                   /* Adds space below the paragraph */
         line-height: 1.5;                      /* Increases line height for readability */
}

.main-img { max-width: 100%;                    /* Ensures image doesn't exceed container width */
            border: 1px solid #ccc;             /* Adds a subtle border around images */
            border-radius: 5px;                 /* Rounds corners of images */
          }

.sidebar { flex: 1;                             /* Sidebar takes up 1/3 of space */
           background-color: #172d67;           /* Dark background color */
           color: white;                        /* White text in the sidebar */
           padding: 40px 20px;                  /* Adds padding inside the sidebar */
           margin-top: 10px;                    /* Adds space on top */
           margin-bottom: 10px;                 /* Adds space on bottom */
           font-size: 18px;                     /* Font size for sidebar text */
         }

.sidebar h3 { font-size: 31px;                  /* Sets font size for sidebar headers */
              margin-bottom: 20px;              /* Adds space below the header */
              font-family: Tahoma, sans-serif;  /* Font for sidebar header */
              font-weight: 700;                 /* Bold text for headers */
            }

.sidebar ul { list-style-type: "- ";            /* Custom bullet style */
              padding-left: 20px;               /* Adds padding to the left */
              margin-bottom: 20px;              /* Adds space below the list */
            }

.sidebar ul li { margin: 10px 0;                /* Adds vertical space between list items */
               }

.sidebar-images { display: flex;                /* Flexbox for image layout */
                  gap: 10px;                    /* Adds space between images */
                }

.sidebar-images img { width: 50%;               /* Makes each image take up half the width of the container */
                      border-radius: 5px;       /* Rounds the corners of images */
                    }

footer { background-color: #8c15e9;             /* Bright background color for footer */
         color: white;                          /* White text */
         text-align: center;                    /* Center-aligns footer text */
         padding: 10px;                         /* Adds padding */
         font-size: 14px;                       /* Smaller font size */
       }
